{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aumate-app",
  "version": "0.1.0",
  "identifier": "com.zhanglin.aumate-app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Aumate",
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false
      },
      {
        "label": "settings",
        "title": "Aumate Settings",
        "url": "settings.html",
        "width": 1200,
        "height": 1000,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "center": true
      },
      {
        "label": "screenshot",
        "title": "Screenshot",
        "url": "screenshot.html",
        "fullscreen": true,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
