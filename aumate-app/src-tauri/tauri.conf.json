{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "aumate-app",
  "version": "0.1.0",
  "identifier": "com.zhanglin.aumate-app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "settings",
        "title": "Aumate Settings",
        "url": "pages/settings.html",
        "width": 900,
        "height": 600,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": true,
        "center": true,
        "windowEffects": {
          "effects": ["acrylic"],
          "color": "#00000032",
          "radius": 12.0
        }
      },
      {
        "label": "commandpalette",
        "title": "Aumate",
        "url": "pages/commandpalette.html",
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "center": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": true,
        "windowEffects": {
          "effects": ["acrylic"],
          "color": "#00000032",
          "radius": 12.0
        }
      },
      {
        "label": "elementscan",
        "title": "Element Scanner",
        "url": "pages/elementscan.html",
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "fullscreen": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
